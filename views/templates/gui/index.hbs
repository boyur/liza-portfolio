<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>
<body class="gui">
    <h2>GUI</h2>
    <div>
        <div class="square" style="background-color: #00bfa5">#00bfa5</div>
        <div class="square" style="background-color: #009688">#009688</div>
        <div class="square" style="background-color: #455a64">#455a64</div>
        <div class="square" style="background-color: #373e42">#373e42</div>
    </div>

    <div class="gui__inputs">
        <div class="input">
            <div class="input__icon">
                <i aria-hidden="true" class="fa fa-user"></i>
            </div>
            <input type="text" class="input__main" placeholder="Логин">
        </div>

        <div class="input gui-input__success">
            <div class="input__icon">
                <i aria-hidden="true" class="fa fa-user"></i>
            </div>
            <input type="text" class="input__main" placeholder="Логин">
        </div>

        <div class="input gui-input__error">
            <div class="input__icon">
                <i aria-hidden="true" class="fa fa-user"></i>
            </div>
            <input type="text" class="input__main" placeholder="Логин">
            <div class="gui-input__error-dropdown">
                Вы не ввели логин
            </div>
        </div>
    </div>

    <section>
        <div class="gui__checks">
            <div class="checkbox">
                <input id="check1" type="checkbox" name="check" value="check1">
                <label for="check1">Я человек</label>
            </div>
            <div class="checkbox">
                <input id="check2" type="checkbox" name="check" value="check2" checked>
                <label for="check2">Я человек</label>
            </div>
        </div>

        <div class="gui__radio">
            <div class="radio">
                <input id="radio1" type="radio" name="radio" value="yes">
                <label for="radio1">Да</label>
            </div>

            <div class="radio">
                <input id="radio2" type="radio" name="radio" value="yes" checked>
                <label for="radio2">Да</label>
            </div>
        </div>
    </section>

    <section>
        <div class="gui__button">
            <button class="button-1">На главную</button>
        </div>
        <div class="gui__button background__gray">
            <button class="button-2">На главную</button>
        </div>
    </section>

    <section>
        <div class="gui__socials">
            <div class="socials socials--green">
                <a href="#" class="social">
                    <i aria-hidden="true" class="fa fa-vk"></i>
                </a>
            </div>
        </div>
    </section>

</body>
</html>